<html>
  <head>
    <title>Ehla Spotify - login</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/3.3.7/superhero/bootstrap.min.css" />
  </head>
</style>
<body>
 <div>
    <div id="login">
     <h1><%= title %></h1>
     <a href="./login">Log in</a>
    </div>
    <div id="loggedin">
    </div>
 </div>
 <script id="loggedin-template" type="text/x-handlebars-template">
    <h1>Logged in as <%= display_name %></h1>
    <img id="avatar" width="200" src="<%= img_url %>" />
    <dl>
     <dt>Display name</dt><dd><%= display_name %></dd>
     <dt>Username</dt><dd><%= id %></dd>
     <dt>Email</dt><dd><%= email %></dd>
     <dt>Link</dt><dd><a href="<%= href %>"><%= href %></a></dd>
     <dt>Profile Image</dt><dd><%= img_url %></dd>
    </dl>
    <p><a href="/">Log in again</a></p>
 </script>
</body>
</html>
